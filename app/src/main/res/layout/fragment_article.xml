<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ui.article.ArticleFragment">

    <ImageView
        android:id="@+id/img_article"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/article" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_article"
        android:layout_width="383dp"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_searchview"
        app:layout_constraintBottom_toBottomOf="@+id/img_article"
        app:layout_constraintEnd_toEndOf="@+id/img_article"
        app:layout_constraintLeft_toLeftOf="@+id/img_article"
        app:layout_constraintStart_toStartOf="@+id/img_article"
        app:layout_constraintTop_toTopOf="@+id/img_article"
        app:layout_constraintVertical_bias="0.16"
        app:queryHint="Cari artikel disini" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_article"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_article"
        app:layout_constraintVertical_bias="1.0"
        tools:listitem="@layout/item_article"/>

</androidx.constraintlayout.widget.ConstraintLayout>